{
  "env": {
    "EDITOR": "vim"
  },
  "permissions": {
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "skipDangerousModePermissionPrompt": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "outputStyle": "custom",
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file=$(jq -r '.tool_input.file_path // empty') && [ -n \"$file\" ] && [[ \"$file\" == *.py ]] && uvx ruff check --fix --quiet \"$file\" 2>/dev/null; true"
          }
        ]
      }
    ]
  }
}
